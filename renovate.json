{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Track Talos version in talconfig.yaml",
      "fileMatch": ["talos/talconfig\\.yaml$"],
      "matchStrings": ["talosVersion: (?<currentValue>v\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "siderolabs/talos",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "description": "Track Kubernetes version in talconfig.yaml",
      "fileMatch": ["talos/talconfig\\.yaml$"],
      "matchStrings": ["kubernetesVersion: (?<currentValue>v\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "kubernetes/kubernetes",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "description": "Track Talos version for Tuppr TalosUpgrade",
      "fileMatch": ["kubernetes/infra/tuppr/values\\.yaml$"],
      "matchStrings": ["talosVersion: (?<currentValue>v\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "siderolabs/talos",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "description": "Track Kubernetes version for Tuppr KubernetesUpgrade",
      "fileMatch": ["kubernetes/infra/tuppr/values\\.yaml$"],
      "matchStrings": ["kubernetesVersion: (?<currentValue>v\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "kubernetes/kubernetes",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "description": "Track argocd-diff-preview Docker image in GitHub Actions",
      "fileMatch": ["\\.github/workflows/.*\\.yaml$"],
      "matchStrings": ["dagandersen/argocd-diff-preview:(?<currentValue>v[\\d\\.]+)"],
      "depNameTemplate": "dagandersen/argocd-diff-preview",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge minor and patch updates (after CI passes)",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Never automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Group Talos, Kubernetes, and kubectl together, never automerge",
      "matchPackageNames": ["siderolabs/talos", "kubernetes/kubernetes", "registry.k8s.io/kubectl"],
      "groupName": "talos-kubernetes",
      "automerge": false
    }
  ]
}
