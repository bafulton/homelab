{
  "alert": "Certificate Expiring Soon",
  "alertType": "METRIC_BASED_ALERT",
  "severity": "warning",
  "ruleType": "promql_rule",
  "evalWindow": "5m0s",
  "frequency": "1h0m0s",
  "broadcastToAll": true,
  "preferredChannels": ["019b9170-7e71-7dde-89c5-2c637c0d8646"],
  "disabled": false,
  "description": "TLS certificate will expire within 7 days",
  "summary": "Certificate expiring soon",
  "labels": {
    "source": "gitops",
    "severity": "warning"
  },
  "condition": {
    "compositeQuery": {
      "queries": [
        {
          "type": "promql",
          "spec": {
            "name": "A",
            "query": "(certmanager_certificate_expiration_timestamp_seconds - time()) / 86400",
            "disabled": false,
            "step": 0,
            "stats": false,
            "legend": "{{namespace}}/{{name}}"
          }
        }
      ],
      "panelType": "graph",
      "queryType": "promql"
    },
    "op": "2",
    "target": 7,
    "matchType": "1",
    "selectedQueryName": "A"
  }
}
