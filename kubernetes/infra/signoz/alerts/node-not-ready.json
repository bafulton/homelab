                "spaceAggregation": "min",
                "reduceTo": ""
              }
            ],
            "disabled": false,
            "filter": {
              "expression": "condition = 'Ready'"
            },
            "groupBy": [
              {
                "name": "k8s.node.name",
                "signal": "",
                "fieldContext": "attribute",
                "fieldDataType": "string"
              }
            ],
            "having": {
              "expression": ""
            },
            "legend": "{{k8s.node.name}}"
          }
        }
      ],
      "panelType": "graph",
      "queryType": "builder"
    },
    "op": "3",
    "target": 1,
    "matchType": "1",
    "selectedQueryName": "A"
  }
